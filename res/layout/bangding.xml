<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/beijing" >

    <Button
        android:id="@+id/bdhuoqu"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="#339933"
        android:textSize="20dp"
        android:layout_alignTop="@+id/bdshouji"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/bdshouji"
        android:text="获取验证码" />

    <EditText
        android:id="@+id/bdshouji"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:hint="手机号码"
        android:background="#FFFFFF"
        android:layout_above="@+id/bdyanzheng"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="46dp"
        android:layout_marginLeft="22dp"
        android:ems="10" />

    <EditText
        android:id="@+id/bdyanzheng"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:hint="验证码"
        android:background="#FFFFFF"
        android:layout_alignLeft="@+id/bdshouji"
        android:layout_centerVertical="true"
        android:ems="10" />

    <Button
        android:id="@+id/bdchongfa"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="#339933"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/bdhuoqu"
        android:layout_alignTop="@+id/bdyanzheng"
        android:text="重新发送" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="绑定手机"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp" />

    <Button
        android:id="@+id/bdqueding"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:background="#339933"
        android:text="确定"
        android:textSize="25dp" />

</RelativeLayout>
